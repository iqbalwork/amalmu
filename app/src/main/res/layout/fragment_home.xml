<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-48dp"
        android:layout_marginBottom="356dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_home" />

    <TextView
        android:id="@+id/tv_aktifkan_lokasi"
        style="@style/TextViewRobotoMedium14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="@string/label_aktifkan_lokasi"
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/ic_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen16"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_notif_adzan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen16"
        android:background="@drawable/bg_icon"
        android:padding="8dp"
        android:src="@drawable/ic_volume_on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_aktifkan_lokasi" />

    <ImageView
        android:id="@+id/iv_qibla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen16"
        android:background="@drawable/bg_icon"
        android:padding="8dp"
        android:src="@drawable/ic_kabah"
        app:layout_constraintBottom_toBottomOf="@id/iv_notif_adzan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_notif_adzan" />

</androidx.constraintlayout.widget.ConstraintLayout>